<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PracticalWork4_Gusenkov_Permyakova.Pages.SimplePage"
        Width="300"
        Height="150"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Title="Сообщение" Background="#222831" Foreground="#EEEEEE">
        <StackPanel Margin="20" Spacing="10">
                <TextBlock x:Name="MessageText" TextWrapping="Wrap"/>
                <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#EEEEEE"  Background="#00adb5" Click="Ok_Click"/>
        </StackPanel>
</Window>
